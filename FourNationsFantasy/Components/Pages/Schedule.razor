    private string FormatTime(TimeSpan time)
    {
        int hour = time.Hours % 12;
        if (hour == 0) hour = 12;
        string amPm = time.Hours < 12 ? "am" : "pm";
        return $"{hour}:{time.Minutes:D2} {amPm}";
