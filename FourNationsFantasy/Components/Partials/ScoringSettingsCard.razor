@inject Data.ScoreCalculationService ScoreCalculator

<MudPaper Class="pa-8">
    @foreach ((string name, double value) in ScoreCalculator.Categories())
    {
        <MudStack Class="my-3" Row="true" Justify="Justify.SpaceBetween" Spacing="20">
            <MudText>@name</MudText>
            <MudText>@value</MudText>
        </MudStack>
    }
</MudPaper>